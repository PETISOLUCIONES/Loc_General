<?xml version="1.0"?>
<odoo>
    <data>
        <record id="vendor_reg_request_form_view" model="ir.ui.view">
            <field name="name">vendor.reg.request.form.view</field>
            <field name="model">vendor.registration.request</field>
            <field name="arch" type="xml">
                <form string="Vendor Registration Request Form">
                    <header>
                        <button class="oe_highlight" name="create_vendor" string="Create Vendor" type="object" invisible="state not in ['to_approve']"/>
                        <button class="oe_highlight" name="%(bi_vendor_registration_request.wizard_vendor_register_reason_action_window)d" string="Reject" type="action" invisible="state not in ['to_approve']"/>
                        <field name="state" widget="statusbar" statusbar_visible="to_approve, approve,reject"/>
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box" invisible="state not in ['approve']">
                            <button class="oe_stat_button" string="Vendor" name="action_vendor_view"  type="object" icon="fa-user"/>
                        </div>
                        <field name="vendor_image" widget="image" class="oe_avatar"/>
                        <div class="oe_title">
                            <label for="name" string="Name"/>
                            <h1><field name="name"/></h1>
                        </div>
                        <group>
                            <group>
                                <field name="types"/>
                                <field name="email"/>
                                <field name="phone"/>
                                <field name="mobile"/>
                            </group>
                            <group>
                                <field name="street"/>
                                <field name="city"/>
                                <field name="zip"/>
                                <field name="link"/>
                                <field name="country"/>
                                <field name="state_id"/>
                            </group>
                        </group>
                        <notebook>
                            <page name="vendor_childs" string="Contacts" invisible="types == 'individual'">
                                <field name="child_ids">
                                    <tree>
                                        <field name="name"/>
                                        <field name="email"/>
                                        <field name="phone"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="vendor_reg_request_tree_view" model="ir.ui.view">
            <field name="name">vendor.reg.request.tree.view</field>
            <field name="model">vendor.registration.request</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="email"/>
                </tree>
            </field>
        </record>

        <record id="form_action_vendor_registration_request" model="ir.actions.act_window">
            <field name="name">Vendor Registration Request</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">vendor.registration.request</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem action="form_action_vendor_registration_request" parent="purchase.menu_procurement_management"
                  name="Vendor Registration Request"
                  id="menu_vendor_reg_request" sequence="50" groups="purchase.group_purchase_manager"/>

    </data>
</odoo>
