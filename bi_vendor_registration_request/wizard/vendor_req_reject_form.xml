<?xml version="1.0" encoding="utf-8"?>
<odoo>


    <record id="wizard_vendor_register_reason_form" model="ir.ui.view">
        <field name="name">wizard.vendor.register.reason.form</field>
        <field name="model">wizard.vendor.register.reject.reason</field>
        <field name="arch" type="xml">
            <form string="Wizard">
                <group>
                    <field name="reason"/>
                </group>
                <footer>
                    <button name="confirm" type="object" string="Confirm" class="oe_highlight"/>
                    <button name="cancel" string="Cancel" special="cancel" class="oe_link"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="wizard_vendor_register_reason_action_window" model="ir.actions.act_window">
        <field name="name">Vendor Registration Reason Window</field>
        <field name="res_model">wizard.vendor.register.reject.reason</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

</odoo>