<?xml version="1.0"?>
<odoo>
    <!--
        ============================================================================
        Vista: Agregar campo de Usuarios en formulario de Diario Contable
        ============================================================================
        Propósito:
            - Extiende la vista de formulario de account.journal
            - Agrega el campo many2many "user_ids" para asignar usuarios permitidos

        Ubicación:
            - Se inserta después del campo "type" (Tipo de Diario)

        Seguridad:
            - Solo visible para usuarios con el grupo "group_access_of_assign_user"
            - Este grupo permite asignar restricciones de usuarios en diarios

        Widget:
            - many2many_tags: Muestra los usuarios como etiquetas seleccionables
    -->
    <record id="sh_account_journal_restrict_view" model="ir.ui.view">
        <field name="name">account.journal.form</field>
        <field name="model">account.journal</field>
        <field name="inherit_id" ref="account.view_account_journal_form" />
        <field name="arch" type="xml">
            <!-- Inserta el campo user_ids después del campo type -->
            <xpath expr="//field[@name='type']" position="after">
                <field name="user_ids"
                       widget="many2many_tags"
                       groups="restriccion_diarios.group_access_of_assign_user" />
            </xpath>
        </field>
    </record>

    <!--
        ============================================================================
        Vista: Agregar campo de Diarios en formulario de Usuario
        ============================================================================
        Propósito:
            - Extiende la vista de formulario de res.users
            - Agrega el campo many2many "journal_ids" para asignar diarios permitidos

        Ubicación:
            - Se inserta dentro del div con clase "oe_title" (área del título del usuario)

        Seguridad:
            - Solo visible para usuarios con el grupo "group_access_of_assign_user"
            - Permite gestionar desde el usuario qué diarios puede acceder

        Widget:
            - many2many_tags: Muestra los diarios como etiquetas seleccionables

        Relación:
            - Funciona en conjunto con la vista de diario para gestión bidireccional
            - Usuario -> Diarios (esta vista)
            - Diario -> Usuarios (vista anterior)
    -->
    <record id="sh_add_res_user_restrict_view" model="ir.ui.view">
        <field name="name">res.users.form</field>
        <field name="model">res.users</field>
        <field name="inherit_id" ref="base.view_users_form" />
        <field name="arch" type="xml">
            <!-- Inserta el campo journal_ids dentro del título del formulario de usuario -->
            <xpath expr="//div[hasclass('oe_title')]" position="inside">
                <group>
                    <field name="journal_ids"
                           widget="many2many_tags"
                           groups="restriccion_diarios.group_access_of_assign_user" />
                </group>
            </xpath>
        </field>
    </record>
</odoo>
