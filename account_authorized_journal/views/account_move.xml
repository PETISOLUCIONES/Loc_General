<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">
        <!-- Campo computado para account.move-->
        <record id="view_move_tree_inherit_journal_restriction" model="ir.ui.view">
            <field name="name">account.move.tree.journal.restriction</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//tree" position="inside">
                    <field name="allowed_journal" force_save="1" column_invisible="1"/>
                </xpath>
            </field>
        </record>

        <record id="view_move_form_inherit_journal_restriction" model="ir.ui.view">
            <field name="name">account.move.form.journal.restriction</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">
                <xpath expr="//form" position="inside">
                    <field name="allowed_journal" force_save="1" invisible="1"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>