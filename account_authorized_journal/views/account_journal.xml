<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">
        <!-- Campo computado para account.journal-->
        <record id="view_account_journal_tree_journal_limits" model="ir.ui.view">
            <field name="name">account.journal.tree.journal_limits</field>
            <field name="model">account.journal</field>
            <field name="inherit_id" ref="account.view_account_journal_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//tree" position="inside">
                    <field name="allowed_for_user" force_save="1" column_invisible="1"/>
                </xpath>
            </field>
        </record>

        <record id="view_account_journal_form_journal_limits" model="ir.ui.view">
            <field name="name">account.journal.form.journal_limits</field>
            <field name="model">account.journal</field>
            <field name="inherit_id" ref="account.view_account_journal_form"/>
            <field name="arch" type="xml">
                <xpath expr="//form" position="inside">
                    <field name="allowed_for_user" force_save="1" invisible="1"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>