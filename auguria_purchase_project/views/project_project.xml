<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record model="ir.ui.view" id="edit_project_inherit_auguria">
            <field name="name">project.project.form.inherited.auguria</field>
            <field name="model">project.project</field>
            <field name="inherit_id" ref="project.edit_project"/>
            <field name="priority" eval="20"/>
            <field name="arch" type="xml">
                <xpath expr="//header" position="inside">
                        <button name="action_open_purchase_orders" id="action_open_purchase_orders" string="Create Purchase Order" type="object"
                            context="{'open_purchase_orders': True}" class="btn-primary" data-hotkey="q"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
