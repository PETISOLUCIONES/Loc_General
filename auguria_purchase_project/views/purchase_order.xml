<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record model="ir.ui.view" id="purchase_order_form_inherited_auguria">
            <field name="name">purchase.order.form.inherited.auguria</field>
            <field name="model">purchase.order</field>
            <field name="inherit_id" ref="purchase.purchase_order_form"/>
            <field name="priority" eval="20"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='payment_term_id']" position="before">
                    <field name="account_analytic_id" invisible="1" force_save="1"/>
                </xpath>
                <xpath expr="//notebook//field[@name='order_line']//field[@name='analytic_distribution']" position="attributes">
                    <attribute name="force_save">1</attribute>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
