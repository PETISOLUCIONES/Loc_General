<odoo>
    <record id="view_picking_form_inherit_barcode_sale" model="ir.ui.view">
        <field name="name">stock.picking.form.inherit</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.view_picking_form" />
        <field name="arch" type="xml">
            <notebook position="after">
                <field name="_barcode_scanned" widget="barcode_handler"/>
            </notebook>
            <xpath expr="//field[@name='move_ids_without_package']//tree/field[1]" position="before">
                <field name="last_scanned" invisible="1" column_invisible="1"/>
                <field name="is_scanned" invisible="1" column_invisible="1"/>
            </xpath>
            <xpath expr="//field[@name='move_ids_without_package']//tree" position="attributes">
                <attribute name="decoration-success">last_scanned</attribute>
            </xpath>
        </field>
    </record>
</odoo>