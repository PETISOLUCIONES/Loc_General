<odoo>
    <!-- Vista tree para las operaciones detalladas dentro del picking -->
    <record id="view_stock_move_line_operation_tree_inherit_barcode" model="ir.ui.view">
        <field name="name">stock.move.line.operations.tree.inherit.barcode</field>
        <field name="model">stock.move.line</field>
        <field name="inherit_id" ref="stock.view_stock_move_line_operation_tree"/>
        <field name="arch" type="xml">
            <!-- Agregar decoraci贸n verde cuando last_scanned es True -->
            <tree position="attributes">
                <attribute name="decoration-success">last_scanned</attribute>
            </tree>
            <!-- Agregar el campo last_scanned invisible para que la decoraci贸n funcione -->
            <xpath expr="//tree/field[1]" position="before">
                <field name="last_scanned" invisible="1" column_invisible="1"/>
            </xpath>
        </field>
    </record>

    <!-- Vista tree para operaciones detalladas (otra vista alternativa) -->
    <record id="view_stock_move_line_detailed_operation_tree_inherit_barcode" model="ir.ui.view">
        <field name="name">stock.move.line.detailed.operations.tree.inherit.barcode</field>
        <field name="model">stock.move.line</field>
        <field name="inherit_id" ref="stock.view_stock_move_line_detailed_operation_tree"/>
        <field name="arch" type="xml">
            <!-- Agregar decoraci贸n verde cuando last_scanned es True -->
            <tree position="attributes">
                <attribute name="decoration-success">last_scanned</attribute>
            </tree>
            <!-- Agregar el campo last_scanned invisible para que la decoraci贸n funcione -->
            <xpath expr="//tree/field[1]" position="before">
                <field name="last_scanned" invisible="1" column_invisible="1"/>
            </xpath>
        </field>
    </record>


</odoo>
