<odoo>
    <!-- Agregar barcode handler al formulario de batch -->
    <record id="view_picking_batch_form_inherit_barcode" model="ir.ui.view">
        <field name="name">stock.picking.batch.form.inherit.barcode</field>
        <field name="model">stock.picking.batch</field>
        <field name="inherit_id" ref="stock_picking_batch.stock_picking_batch_form" />
        <field name="arch" type="xml">
            <notebook position="after">
                <field name="_barcode_scanned" widget="barcode_handler"/>
            </notebook>
        </field>
    </record>

    <!-- Heredar la vista tree de move_line_ids para agregar campos de escaneo -->
    <record id="view_move_line_tree_inherit_barcode" model="ir.ui.view">
        <field name="name">stock.move.line.tree.inherit.barcode.batch</field>
        <field name="model">stock.move.line</field>
        <field name="inherit_id" ref="stock_picking_batch.view_move_line_tree" />
        <field name="arch" type="xml">
            <!-- Agregar decoración verde cuando last_scanned es True -->
            <tree position="attributes">
                <attribute name="decoration-success">last_scanned</attribute>
            </tree>
            <!-- Agregar los campos invisibles necesarios para la decoración -->
            <xpath expr="//tree/field[1]" position="before">
                <field name="last_scanned" invisible="1" column_invisible="1"/>
                <field name="is_scanned" invisible="1" column_invisible="1"/>
            </xpath>
        </field>
    </record>
</odoo>